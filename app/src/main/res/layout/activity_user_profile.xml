<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">

    <View
        android:id="@+id/userProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundvector13"
        tools:ignore="@string/userProfileLayout,MissingConstraints" />
    <LinearLayout
        android:id="@+id/userProfileLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:id="@+id/userProfileIconsBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            tools:ignore="@string/userProfileIconsBar">

            <LinearLayout
                android:id="@+id/userProfileIconLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/userProfileIcon"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/darkblue"
                    android:src="@drawable/baseline_shopimage" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/feedbackIconLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/feedbackIcon"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/green"
                    android:src="@drawable/baseline_feedbackhomepag" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/budgetIconLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/budgetIcon"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/darkGreen"
                    android:src="@drawable/baseline_money"

                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userImageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:paddingBottom="10dp"
            >

            <ImageView
                android:id="@+id/userImageIcon"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/baseline_userprofileimage"
                android:background="@color/white"/>

            <Button
                android:id="@+id/updateUserImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="@color/darkblue"
                android:text="@string/updateUserImageButton"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/userProfileUserNameLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:errorEnabled="true"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userProfileUserNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:backgroundTint="@color/lightblue"
                android:drawableStart="@drawable/baseline_userprofileimage"
                android:drawablePadding="12dp"
                android:inputType="text"
                android:maxLines="1"
                android:text="@string/userProfileUserNameInput"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/userProfileEmailLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:errorEnabled="true"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userProfileEmailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:backgroundTint="@color/lightblue"
                android:drawableStart="@drawable/baseline_useremail"
                android:drawablePadding="12dp"
                android:inputType="text"
                android:maxLines="1"
                android:text="@string/userProfileEmailInput"
                android:textStyle="bold"

                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:errorEnabled="true"
            android:id="@+id/userProfileAddressLayout"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userProfileAddressInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:backgroundTint="@color/lightblue"
                android:drawableStart="@drawable/baseline_homeaddress"
                android:drawablePadding="12dp"
                android:inputType="text"
                android:maxLines="1"
                android:text="@string/userProfileAddressInput"
                android:textStyle="bold"


                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/userProfilePhoneNumberLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:errorEnabled="true"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userProfilePhoneNumberInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:backgroundTint="@color/lightblue"
                android:drawableStart="@drawable/baseline_phonenumber"
                android:drawablePadding="12dp"
                android:inputType="text"
                android:maxLines="1"
                android:text="@string/userProfilePhoneNumberInput"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/updateProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/green"
            android:text="@string/updateProfileButton"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/backToHomePage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:drawableStart="@drawable/baseline_back_arrow_black"
            android:drawablePadding="12dp"
            android:text="@string/backToHomePage"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>