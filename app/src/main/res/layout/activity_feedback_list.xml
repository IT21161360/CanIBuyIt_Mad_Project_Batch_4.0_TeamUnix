<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackListActivity"
    android:background="@color/lightblue">

<!--    <include layout="@layout/maintoolbar"/>-->

    <LinearLayout
        android:id="@+id/AdminFeedbackLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightblue"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.505">
        <LinearLayout
            android:id="@+id/AdminFeedbackLayout1Layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shopFeedbacksText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shopFeedbacksText"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="40dp"
                android:textStyle="bold" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/shopFeedbacksCardView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/balance_layout"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:id="@+id/shopFeedbacksCardView1Layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="@string/shopFeedbacksCardView1Layout1">

                    <ImageView
                        android:id="@+id/userProfileIcon"
                        android:layout_width="117dp"
                        android:layout_height="114dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/baseline_userprofileimage"
                        app:layout_constraintStart_toStartOf="parent" />

                    <LinearLayout
                        android:id="@+id/userProfileDetails"
                        android:layout_width="244dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/userName"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/userComment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/userComment"
                            android:textColor="@color/red"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />


                        <TextView
                            android:id="@+id/userRatingsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/userRatingsText"
                            android:textColor="@color/darkGreen"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />


                        <RatingBar
                            android:id="@+id/userRatings"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"

                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttonsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    tools:ignore="@string/buttonsLayout">


                    <LinearLayout
                        android:id="@+id/acceptButtonLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/userFeedbackAcceptButton"
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/darkGreen"
                            android:text="@string/userFeedbackAcceptButton"
                            android:textAllCaps="true"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/declineButtonLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/userFeedbackDeclineButton"
                            android:layout_width="173dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/red"
                            android:text="@string/userFeedbackDeclineButton"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/shopFeedbacksCardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/balance_layout"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:id="@+id/shopFeedbacksCardView1Layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="@string/shopFeedbacksCardView1Layout1">

                    <ImageView
                        android:id="@+id/userProfileIcon1"
                        android:layout_width="117dp"
                        android:layout_height="114dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/baseline_userprofileimage"
                        app:layout_constraintStart_toStartOf="parent" />

                    <LinearLayout
                        android:id="@+id/userProfileDetails2"
                        android:layout_width="244dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/userName2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/userName"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/userComment2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/userComment"
                            android:textColor="@color/red"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />


                        <TextView
                            android:id="@+id/userRatingsText2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/userRatingsText"
                            android:textColor="@color/darkGreen"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />


                        <RatingBar
                            android:id="@+id/userRatings2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttonsLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    tools:ignore="@string/buttonsLayout">


                    <LinearLayout
                        android:id="@+id/acceptButtonLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/userFeedbackAcceptButton2"
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/darkGreen"
                            android:text="@string/userFeedbackAcceptButton"
                            android:textAllCaps="true"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/declineButtonLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/userFeedbackDeclineButton2"
                            android:layout_width="173dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/red"
                            android:text="@string/userFeedbackDeclineButton"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/shopFeedbacksCardView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/balance_layout"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:id="@+id/shopFeedbacksCardView1Layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="@string/shopFeedbacksCardView1Layout1">

                    <ImageView
                        android:id="@+id/userProfileIcon2"
                        android:layout_width="117dp"
                        android:layout_height="114dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/baseline_userprofileimage"
                        app:layout_constraintStart_toStartOf="parent" />

                    <LinearLayout
                        android:id="@+id/userProfileDetails3"
                        android:layout_width="244dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/userName3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/userName"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/userComment3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/userComment"
                            android:textColor="@color/red"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />


                        <TextView
                            android:id="@+id/userRatingsText3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/userRatingsText"
                            android:textColor="@color/darkGreen"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />


                        <RatingBar
                            android:id="@+id/userRatings3"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"

                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttonsLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    tools:ignore="@string/buttonsLayout">


                    <LinearLayout
                        android:id="@+id/acceptButtonLayout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/userFeedbackAcceptButton3"
                            android:layout_width="177dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/darkGreen"
                            android:text="@string/userFeedbackAcceptButton"
                            android:textAllCaps="true"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/declineButtonLayout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/userFeedbackDeclineButton3"
                            android:layout_width="173dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/red"
                            android:text="@string/userFeedbackDeclineButton"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>






        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>